<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add new book</title>
    <link rel="stylesheet" href="../styles/main.css" />
</head>
<body>
    <h1>Edit book details</h1>
    <div class="book">
        <img src="<%= book.cover %>" alt="book cover">

        <form action="/edit/<%= book.id %>" method="post">
            <div class="form-row">
                <label for="isbn">ISBN:</label>
                <input type="text" id="isbn" name="isbn" value="<%= book.isbn %>" required>
            </div>

            <div class="form-row">
                <label for="title">Title:</label>
                <input type="text" id="title" name="title" value="<%= book.title %>" required>
            </div>

            <div class="form-row">
                <label for="author">Author:</label>
                <input type="text" id="author" name="author" value="<%= book.author %>" required>
            </div>

            <div class="form-row">
                <label for="date_read">Date read:</label>
                <input type="date" id="date_read" name="date_read" value="<%= book.date_read ? new Date(book.date_read).toISOString().slice(0,10) : '' %>">
            </div>

            <div class="form-row">
                <label for="rating">Rating:</label>
                <select id="rating" name="rating">
                    <% for(let i=1; i<=10; i++) { %>
                        <option value="<%= i %>" <%= book.rating == i ? 'selected' : '' %>><%= i %></option>
                    <% } %>
                </select>
            </div>
            
            <div class="form-row">
                <label for="summary">Summary:</label>
                <br><br>
                <textarea id="summary" name="summary"><%= book.summary %></textarea>
            </div>

            <br><br>   
            <div class="form-row button-row">
                <button type="submit">Save</button>
                <button type="button" onclick="window.location.href='/'" style="margin-left: 10px;">Cancel</button>
            </div>
        </form>
    </div>

    <!-- Notes-------------------------------------------------------------------------------------------------------- -->
    <!-- <div class="book"> -->
        <!-- Show Notes according to no. of notes saved -->
        <label for="notes">Notes:</label>
        <% if (book.notes && book.notes.length > 0) { %>
            <br>                  
            <% for (let i = 1; i <= book.notes.length; i++) { %>
                <!-- Update the existing Note -->
                <form action="/update-note/<%= book.id %>" method="post">
                    <br>
                    <input type="hidden" name="update_note_id" value="<%= i %>">
                    <textarea id="updated_note" name="updated_note"><%= book.notes[i-1] %></textarea>
                    <br>
                    <button type="submit">Update</button>
                    <!-- Add the Remove button inline with the Update button -->
                    <button type="submit" form="delete-note-form-<%= i %>">Remove</button>
                </form>

                <form id="delete-note-form-<%= i %>" action="/del-note/<%= book.id %>" method="post" style="display: none;">
                    <input type="hidden" name="del_note" value="<%= i %>">
                </form>
                <br>
            <% } %>
        <% } %>

            <!-- A form to add a new note to the book -->
            <br>
            <form action="/add-note/<%= book.id %>" method="post">
                <label for="new_note">New note:</label>
                <br>
                <textarea id="new_note" name="new_note"></textarea>
                <br>
                <button type="submit">Add</button>
            </form>        
    <!-- </div> -->
    
</body>
</html>